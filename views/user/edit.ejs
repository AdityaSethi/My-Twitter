<div class='container margin'>
  <form role="form" action="/user/update/<%= user.id %>" method="POST">
    <h1>Hey <%= user.name %>, You edit whatever you want!</h1>
    <% if(flash && flash.err) { %>
      <div class="error"><h4> Please fill the right details </h4></div>
    <%}%>

    <div class="form-group">
      <div class="col-md-10">
        <input type="text" class="form-control" name="name" value=<%= user.name %>>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-10">
        <input type="text" class="form-control" name="userid" value=<%= user.userid %>>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-10">
        <input type="email" class="form-control" name="email" value=<%= user.email %>>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-10">
        <input type="password" class="form-control" name="password" value=<%= user.password %>>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-10">
        <label class="radio">
          <input type="radio" name="sex" id="sex" value="male">
          Male
        </label>
        <label class="radio">
          <input type="radio" name="sex" id="sex" value="female">
          Female
        </label>
      </div>
    </div> 
    <div class="row">
      <div class="col-md-10">
        <button type="submit" class="btn btn-info">
          Proceed
        </button>
      </div>
      <input type="hidden" name="_csrf" value="<%= _csrf %>" />
    </div>
  </form>
</div>