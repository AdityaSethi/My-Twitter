<div class='container margin'>
	<div class='col-md-4'>
		<div class='col-md-12'><a href=""><h2><%= user.name %></h2></a></div>
		<div class='col-md-12 handle'><h4>@<%= user.userid %></h4></div>
		<div class='col-md-12 info'>
			<div class='col-md-4'>TWEETS <br> <b><%= user.tweetCount %></b> </div>
			<div class='col-md-4'>FOLLOWING <a href='/user/showfollowing'><%= user.following ? (user.following.length-1) : 0 %></a></b> </div>
			<div class='col-md-4'>FOLLOWERS <b><a href='/user/showfollowers'><%= user.followers ? user.followers.length : 0 %></a></b></div>
		</div>
		<div class='col-md-12'>
			<form role="form" action="/tweet/create" method="POST">
				<textarea rows='4' maxlength='140' class="form-control margin-top" name="tweetText" placeholder="Enter tweet"></textarea><br>
				<button type="submit margin-top" class="btn btn-info">Tweet</button>
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
			</form>
		</div>
	</div>
	<div class='col-md-8 container-home'>
		<h2> Tweets </h2>
		<table class='table'>
			<% _.each(tweets, function(tweet){%>
				<tr data-id=<%= tweet.id %> data-model='tweet'>
					<b><%= tweet.tweetBy ? tweet.tweetBy.split('@')[0] : tweet.tweetBy%></b>
					@<%= tweet.tweetBy ? tweet.tweetBy.split('@')[1] : tweet.tweetBy%><br>
					<%= tweet.tweetText%>
					<hr>
				</tr>
			<% }) %>
		</table>				
	</div>
</div>
