<div class='container margin'>
	<h3> Users </h3>
	<table class='table'>
		<tr>
			<th>ID</th>
			<th>User</th>
			<th>Sex</th>
			<th>Email</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		<% _.each(users, function(user){%>
			<tr data-id=<%= user.id %> data-model='user'>
				<td><%= user.id%></td>
				<td><%= user.name%></td>
				<td><%= user.sex%></td>
				<td><%= user.email%></td>
				<td><a href='/user/show/<%= user.id %>' class='brn btn-sm btn-primary'>Show</a></td>
				<td><a href='/user/edit/<%= user.id %>' class='brn btn-sm btn-warning'>Edit</a></td>
				<td>
					<form action='/user/destroy/<%= user.id %>'' method='POST'>
						<input type='hidden' name='_method' value='delete' />
						<input type='submit' class='btn btn-sm btn-danger' value='delete' />
						<input type="hidden" name="_csrf" value="<%= _csrf %>" />
					</form>
				</td>					
			</tr>
		<% }) %>
	</table>				
</div>